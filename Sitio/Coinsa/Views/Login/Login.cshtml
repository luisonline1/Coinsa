
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row text-center">
        <div class="col-lg-12">
            <img src="~/Imgs/LOGO-COINSA-RENOVADO.png" alt="LogoCoinsa" style="width:200px" />
        </div>

    </div>
    <form id="frm">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <div class="form-group">
                    <label>Usuario:</label>
                    <input class="form-control" type="text" name="name" value="" />
                </div>
                <div class="form-group">
                    <label>Contraseña:</label>
                    <input class="form-control" type="password" name="name" value="" />
                </div>
                <div>
                    <input type="submit" class="btn btn-info" name="name" value="Aceptar" />
                </div>
            </div>
        </div>
    </form>

</div>

<script>
    $(document).ready(function myfunction() {
        $("#frm").submit(function (e)
        {
            e.preventDefault();
            url("@Url.Content("http://localhost:52101/api/Coinsa/Login")");
            parametros = $(this).serialize();
            $.get(url, parametros, function (data)
            {
                if (data === "1") {
                    document.location.href = "~/Login/Login";
                }
                else {alert(data) }
            })
        });
    });    
</script>

